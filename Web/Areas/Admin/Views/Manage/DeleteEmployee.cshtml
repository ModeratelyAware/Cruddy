@model Web.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DeleteEmployee">
            <input asp-for="Employee.Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" readonly />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" readonly/>
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DepartmentId" class="control-label"></label>
                <div>
                    <select asp-for="Employee.DepartmentId" asp-items="Model.Departments" disabled>
                        <option value="">Select department</option>
                    </select>
                </div>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Title" class="control-label"></label>
                <input asp-for="Employee.Title" class="form-control" readonly/>
                <span asp-validation-for="Employee.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" readonly/>
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Phone1" class="control-label"></label>
                <input asp-for="Employee.Phone1" class="form-control" readonly/>
                <span asp-validation-for="Employee.Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Phone2" class="control-label"></label>
                <input asp-for="Employee.Phone2" class="form-control" readonly/>
                <span asp-validation-for="Employee.Phone2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Ext" class="control-label"></label>
                <input asp-for="Employee.Ext" class="form-control" readonly/>
                <span asp-validation-for="Employee.Ext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Notes" class="control-label"></label>
                <input asp-for="Employee.Notes" class="form-control" readonly/>
                <span asp-validation-for="Employee.Notes" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-secondary">Return</button>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
