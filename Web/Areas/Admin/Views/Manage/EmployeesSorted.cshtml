@model Web.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="row">
    <div class="col-auto">
        <form asp-controller="Manage" asp-action="EmployeesSorted" method="get">
            <p>
                Department: <select asp-for="FilteredDepartment" asp-items="Model.Departments">
                    <option value="">All</option>
                </select>
                
                Search: <input type="text" asp-for="SearchString" />
                <input type="submit" value="Filter" />
            </p>
        </form>
    </div>
    <div class="col text-end">
        <a asp-action="CreateEmployee" type="submit" value="Create" class="btn btn-primary">Create</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Phone2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Ext)
            </th>
            <th style="width: 15%">
                @Html.DisplayNameFor(model => model.Employee.Notes)
            </th>
            <th style="width: 10%">
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="UpdateEmployee" asp-route-id="@item.Id">Update</a> |
                <a asp-action="DeleteEmployee" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
